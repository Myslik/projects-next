<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Projects</title>
    <link href="~/Content/moravia.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar top-bar"></span>
                    <span class="icon-bar middle-bar"></span>
                    <span class="icon-bar bottom-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <span class="logo"></span>
                    <span class="title">Projects</span>
                </a>
            </div>

            <div id="navbar" class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li><a href="#">Projects</a></li>
                </ul>

                <div class="navbar-right navbar-buttons">
                    <a data-original-title="Sign out" href="#" rel="tooltip" class="btn btn-default btn-sm" data-toggle="tooltip" data-placement="bottom" title=""><span class="fa fa-power-off"></span></a>
                </div>
            </div>
            <ul class="breadcrumb">
                <li><a href="/"><span class="fa fa-home"></span></a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>

    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    <div id="footer">
        <div class="container-fluid">
            <div class="row">
                <p class="text-muted text-center">
                    © 2012 - @DateTime.Now.Year <a href="http://www.moravia.com/">Moravia IT a.s.</a> All rights reserved.
                </p>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>